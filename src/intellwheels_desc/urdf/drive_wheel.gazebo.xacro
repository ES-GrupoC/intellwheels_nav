<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

	<xacro:macro name="drive_wheel_mat" params="prefix">
		<gazebo reference="${prefix}_drive_wheel_link">
			<visual>
				<material>
					<ambient>0.64 0.64 0.64 1</ambient>
					<diffuse>0.64 0.64 0.64 1</diffuse>
					<specular>0.5 0.5 0.5 1</specular>
				</material>
			</visual>
		</gazebo>
	</xacro:macro>

	<xacro:drive_wheel_mat prefix="left"/>
	<xacro:drive_wheel_mat prefix="right"/>

</robot>
