<launch>
	<!-- arguments -->
	<arg name="pkg" value="$(find intellwheels_nav)"/>

	<!-- model description -->
	<include file="$(find intellwheels_desc)/launch/wheelchair.launch"/>

	<!-- model spawner -->
	<node name="spawner" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model wheelchair"/>

	<!-- rviz -->
	<node name="rviz" pkg="rviz" type="rviz" args="--display-config $(arg pkg)/rviz/config.gz.rviz" output="screen"/>

	<!-- gazebo -->
	<include file="$(find gazebo_ros)/launch/empty_world.launch">
		<arg name="verbose" value="true"/>
		<arg name="gui_required" value="true"/>
		<arg name="world_name" value="$(arg pkg)/worlds/lab.gazebo.world"/>
	</include>

	<!-- manual control -->
	<node name="rqt_robot_steering" pkg="rqt_robot_steering" type="rqt_robot_steering"/>

	<!-- map server -->
	<node name="map_server" pkg="map_server" type="map_server" args="$(arg pkg)/worlds/lab.yaml" output="screen"/>

	<!-- amcl localization -->
	<node name="loc" pkg="amcl" type="amcl" output="screen">
		<remap from="scan" to="base_scan"/>
		<rosparam file="$(arg pkg)/config/amcl.gz.yaml"/>
	</node>

	<!-- navigation -->
	<node name="nav" pkg="move_base" type="move_base" output="screen">
		<rosparam file="$(arg pkg)/config/nav.yaml"/>
		<rosparam file="$(arg pkg)/config/global_planner.yaml"/>
		<rosparam file="$(arg pkg)/config/local_planner.gz.yaml"/>
		<rosparam ns="local_costmap" file="$(arg pkg)/config/common_costmap.gz.yaml"/>
		<rosparam ns="global_costmap" file="$(arg pkg)/config/common_costmap.gz.yaml"/>
		<rosparam file="$(arg pkg)/config/local_costmap.yaml"/>
		<rosparam file="$(arg pkg)/config/global_costmap.yaml"/>
	</node>
</launch>
